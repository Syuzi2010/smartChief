<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- User Details -->
        <TextView
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp" />

        <!-- Ingredients Container -->
        <LinearLayout
            android:id="@+id/ingredientsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp" />

        <!-- Filter Button -->
        <Button
            android:id="@+id/openFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Recipes" />

        <!-- Filter Fields (Initially GONE, will be shown in dialog or toggled) -->
        <LinearLayout
            android:id="@+id/filterSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="16dp">

            <!-- Dietary Filter -->
            <EditText
                android:id="@+id/filterDiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dietary Preference (e.g. Vegan, Keto)" />

            <!-- Max Calories Filter -->
            <EditText
                android:id="@+id/filterCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max Calories"
                android:inputType="number" />

            <!-- Apply Filters Button -->
            <Button
                android:id="@+id/applyFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply Filters" />
        </LinearLayout>

        <!-- Ingredients Input and Camera Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/ingredientsInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter ingredients"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:layout_marginEnd="50dp" />

            <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Open Camera" />
        </RelativeLayout>

        <!-- Find Dishes Button -->
        <Button
            android:id="@+id/findDishesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Dishes" />

        <!-- Results TextView -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Matching dishes will appear here" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="clip_horizontal"
            android:text="@string/logout" />

    </LinearLayout>
</ScrollView>

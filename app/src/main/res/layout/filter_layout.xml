<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Spinner -->
    <Spinner
        android:id="@+id/spinnerDietary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp" />

    <!-- Min Calories -->
    <EditText
        android:id="@+id/editTextMinCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerDietary"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:hint="Min Calories"
        android:inputType="number"
        android:padding="12dp" />

    <!-- Max Calories -->
    <EditText
        android:id="@+id/editTextMaxCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMinCalories"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:hint="Max Calories"
        android:inputType="number"
        android:padding="12dp" />

    <!-- Apply Filter Button -->
    <Button
        android:id="@+id/btnApplyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMaxCalories"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Apply Filter" />

    <!-- Result TextView -->
    <TextView
        android:id="@+id/filterResultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnApplyFilter"
        android:layout_marginTop="20dp"
        android:text="" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:weightSum="3"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Home"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/nav_filter"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Filter"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_filter" />

        <ImageButton
            android:id="@+id/nav_account"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Account"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_account" />
    </LinearLayout>

</RelativeLayout>
